<odoo>
    <record id="view_picking_form_force_cancel" model="ir.ui.view">
        <field name="name">stock.picking.form.force.cancel</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <header position="inside">
                <button name="action_force_cancel"
                        string="Zorla İptal Et"
                        type="object"
                        class="btn-danger"
                        attrs="{'invisible': [('state', 'not in', ['done','assigned'])]}"/>
            </header>
        </field>
    </record>

    <record id="view_picking_tree_force_cancel" model="ir.ui.view">
        <field name="name">stock.picking.tree.force.cancel</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree"/>
        <field name="arch" type="xml">
            <xpath expr="/tree" position="inside">
                <button name="action_force_cancel"
                        string="Zorla İptal"
                        type="object"
                        class="btn-danger"
                        attrs="{'invisible': [('state', 'not in', ['done','assigned'])]}"/>
            </xpath>
        </field>
    </record>
</odoo> 